user_input = int(input("Please enter a decimal integer less than 100: "))

#fifty
fifty_convert = "L"
ten_convert = "X"
five_convert = "V"
one_convert = "I"

print((user_input // 50) * fifty_convert + ((user_input % 50) // 10) * ten_convert + ((user_input % 50) % 10) // 5 * five_convert +
      (((user_input % 50) % 10) % 5) // 1 * one_convert )
