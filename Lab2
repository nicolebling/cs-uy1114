x1 = 0.0
x2 = 1.0
x3 = -1.0
f_of_x1 =( 1 / (2*math.pi) ** 0.5) * math.e ** (-0.5 * x1 ** 2)
f_of_x2 =( 1 / (2*math.pi) ** 0.5) * math.e ** (-0.5 * x2 ** 2)
f_of_x3 =( 1 / (2*math.pi) ** 0.5) * math.e ** (-0.5 * x3 ** 2)

print("The value of the pdf at x = " + str(x1) + " is " + str(f_of_x1))
print("The value of the pdf at x = " + str(x2) + " is " + str(f_of_x2))
print("The value of the pdf at x = " + str(x3) + " is " + str(f_of_x3))
