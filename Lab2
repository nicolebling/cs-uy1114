import random
random_ladder = random.randint( 0, 100)
random_number = random.randint( 0, 100)
print(random_ladder)
print(random_number)

distance_from_wall = int(input("How  many meters from the wall will the ladder be? "))
height_of_wall = int(input("How many meters tall is the wall?"))

result_1 = ((distance_from_wall ** 2 + height_of_wall **2) ** 0.5) <= random_ladder
total_result = result_1 and (random_number < 40)

print("From a distance of " + str(distance_from_wall) + " meters and a wall height of "
      + str(height_of_wall) + " meters, can we reach the roof?: " + str(total_result))
